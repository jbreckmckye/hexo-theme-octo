<%
var pageTitle = page.title || config.title || '';
if (is_archive()) pageTitle = 'Archives';
if (is_tag()) pageTitle = 'Tag: ' + page.tag;
if (is_category()) pageTitle = 'Category: ' + page.category;
if (is_month()) pageTitle += ': ' + page.month + '/' + page.year;
if (is_year()) pageTitle += ': ' + page.year;

var thisYear = new Date().getFullYear();
%>

<!DOCTYPE html>
<html lang="<%=config.language%>">
<head>
    <meta charset="UTF-8">
    <title><%= pageTitle %></title>

    <meta name="author" content="<%= config.author %>">

    <%- favicon_tag('/images/favicon.png') %>

    <meta name="HandheldFriendly" content="True">
    <meta name="MobileOptimized" content="320">
    <meta name="viewport" content="width=device-width,minimum-scale=1,maximum-scale=1">

    <link rel="canonical" href="<%=config.url + '/' + page.canonical_path.replace('index.html', '')%>">

    <% if (theme.atom) {%>
        <link rel="alternate" href="<%=url_for('/atom.xml')%>" type="application/atom+xml">
    <% } %>

    <% if (theme.googleAnalytics) { %>
        <!-- Global site tag (gtag.js) - Google Analytics -->
        <script async src="https://www.googletagmanager.com/gtag/js?id=UA-<%=theme.googleAnalytics%>"></script>
        <script>
          window.dataLayer = window.dataLayer || [];
          function gtag(){dataLayer.push(arguments);}
          gtag('js', new Date());

          gtag('config', 'UA-<%=theme.googleAnalytics%>');
        </script>
    <% } %>

    <%- js('js/modernizr-2.0') %>
    
    <%- js('js/jquery-1.9.1') %>

    <%- partial('partials/social-scripts') %>

    <%- js('js/octo') %>

    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Lato&display=fallback" rel="stylesheet">

    <%- css('css/octo') %>

    <% if (theme.stylesheets && theme.stylesheets.length) { %>
        <!-- stylesheets list from config.yml -->
        <% theme.stylesheets.forEach(function(url) { %>
            <link rel="stylesheet" href="<%= url %>">
        <% }); %>
    <% } %>

</head>
<body>

<%- partial('partials/header') %>

<%- partial('partials/navigation') %>

<div id="main">
    <div id="content">
        <%- body %>
    </div>
</div>

<footer role="contentinfo">
    <p>
        Copyright Â© <%= thisYear %> - <%= config.author %> -
        <span class="credit">Generated using <a href="https://github.com/jbreckmckye/hexo-theme-octo">Octo theme (Nova)</a> for <a href="http://hexo.io">Hexo</a></span>
    </p>
</footer>

<% if (theme.scripts && theme.scripts.length) { %>
    <!-- scripts list from theme config.yml -->
    <% theme.scripts.forEach(function(url) { %>
        <script src="<%= url %>"></script>
    <% }); %>
<% } %>

</body>
</html>
